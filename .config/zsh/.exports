# vim:ft=zsh

export PYENV_ROOT="$HOME/.pyenv"

export HISTORY_IGNORE="(ls|cd|pwd|exit|sudo reboot|history|cd -|cd ..|..)"
export SAVEHIST=10000
export HISTSIZE=12000
export KUBE_EDITOR="nvim"
export MANPAGER="sh -c 'col -bx | bat -l man -p'"
export TERM="xterm-256color"
if [ -n "$TMUX" ]; then
  export TERM=screen-256color
fi
export TERMINAL="alactritty"
export ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=004"

export -U PATH="/usr/local/bin:/usr/local/sbin:/usr/local/go/bin:/usr/bin:/bin:/usr/sbin:/sbin"
export PATH="$HOME/.local/bin:$PATH"
export PATH="$PYENV_ROOT/bin:$PATH"
export PATH="$HOME/.fzf/bin:$PATH"
export PATH="${KREW_ROOT:-$HOME/.krew}/bin:$PATH"
export PATH="$HOME/.pyenv/bin:$PATH"
export PATH="$HOME/.pyenv/shims:$PATH"
export PATH="$HOME/.rbenv/shims:$PATH"

if command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init -)"
fi

if command -v rbenv 1>/dev/null 2>&1; then
  eval "$(rbenv init -)"
fi

. $(brew --prefix asdf)/asdf.sh
# . $(brew --prefix asdf)/etc/bash_completion.d/asdf.bash

eval "$(direnv hook zsh)"


export NVM_DIR=~/.nvm
export PATH="$NVM_DIR/versions/node/v16.14.2/bin:$PATH"
export PATH="$NVM_DIR/versions/node/v16.14.2/bin/npm:$PATH"
# source $(brew --prefix nvm)/nvm.sh
[[ -s "$NVM_DIR/nvm.sh" ]] && source "$NVM_DIR/nvm.sh" --no-use

